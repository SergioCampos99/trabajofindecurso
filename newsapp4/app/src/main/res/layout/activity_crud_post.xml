<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crudPost">

    <Button
        android:id="@+id/btnVerPost"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginStart="40dp"
        android:alpha="0.8"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/cairo"
        android:text="VER POSTS"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSignOut"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <Button
        android:id="@+id/btnPostear"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginEnd="60dp"
        android:alpha="0.8"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/cairo"
        android:text="POST"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="105dp"
        android:layout_height="38dp"
        android:layout_marginEnd="40dp"
        android:alpha="0.8"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/cairo"
        android:text="VOLVER"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="74dp"
        android:layout_height="19dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/g_bold"
        android:text="Titulo"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etTituloPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="@font/g_light"
        android:text="Descripcion"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/etDescPost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <EditText
        android:id="@+id/etTituloPost"
        android:layout_width="385dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/g_light"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.854" />

    <EditText
        android:id="@+id/etDescPost"
        android:layout_width="385dp"
        android:layout_height="41dp"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:fontFamily="@font/g_light"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="46dp"
        android:fontFamily="@font/g_light"
        android:text="*NOTA: Una vez añadas el Post, podrás verlo y editarlo desde el menu de Posts*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>